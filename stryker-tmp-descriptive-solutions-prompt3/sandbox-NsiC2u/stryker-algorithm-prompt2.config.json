{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "testRunner": "jest",
  "reporters": ["clear-text", "progress", "html", "json"],
  "coverageAnalysis": "off",
  
  "mutate": [
    "solutions-algorithm/*.js"
  ],

  "jest": {
    "projectType": "custom",
    "configFile": "jest.config.mjs"
  },

  "tempDirName": "stryker-tmp-algorithm-solutions-prompt2",
  "htmlReporter": {
    "fileName": "mutation-reports/algorithm-solutions-prompt2/index.html"
  },
  
  "thresholds": {
    "high": 80,
    "low": 60,
    "break": 50
  },
  
  "concurrency": 2,
  
  "testRunnerNodeArgs": ["--experimental-vm-modules"],
  
  "logLevel": "info",
  
  "timeoutMS": 30000,
  
  "disableTypeChecks": false,
  
  "ignorePatterns": [
    "Claude/**",
    "solutions-descriptive/**",
    "tests-descriptive/**",
    "tests-algorithm/**",
    "coverage/**",
    "coverage-algorithm/**",
    "coverage-descriptive/**",
    "claude_coverage/**",
    "claude_logs/**",
    "mutation-reports/**",
    "node_modules/**",
    "stryker-tmp*/**"
  ]
}

